{
    "name": "tpak/dq-system-v3",
    "description": "TPAK DQ System v3 - WordPress Plugin for Data Quality Management with LimeSurvey Integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "TPAK Development Team",
            "email": "dev@tpak.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "TPAK\\DQSystem\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPAK\\DQSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "test:coverage": "phpunit --coverage-html coverage/"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "installer-name": "tpak-dq-system"
    }
} 